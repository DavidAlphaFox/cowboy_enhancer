    {jsx, {git, "git://github.com/talentdeficit/jsx.git", {branch, master}}},
    {erlydtl, {git, "git://github.com/erlydtl/erlydtl.git", {branch, master}}},
    {lager, {git, "git://github.com/basho/lager.git", {branch, master}}},
    {epgsql, {git, "git://github.com/epgsql/epgsql.git", {branch, master}}},
    {dh_date, {git, "git://github.com/daleharvey/dh_date.git", {branch, master}}},
    {quickrand, {git, "git://github.com/okeuday/quickrand.git", {branch, master}}},
	{jwt, {git, "git://github.com/marianoguerra/jwt-erl.git", {branch, master}}},
    {gen_smtp, {git, "git://github.com/Vagabond/gen_smtp.git", {branch, master}}}
]}.